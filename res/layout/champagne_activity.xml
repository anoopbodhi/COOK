<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    
          <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Pomegranate Champagne Cocktail"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="16dp"
        android:src="@drawable/champagne_cocktail_2" />

  
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:text="PLAY" />

    
   <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
       
        android:text="This Pomegranate Champagne Cocktail is a perfect treat for special occasions. It is very simple to prepare, based on the Classic Champagne Cocktail where Champagne is poured over a sugar cube soaked in bitters."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="1.0" />
   
    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
       
        android:text="INCREDIENTS"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="1.0" />
    
     <TextView
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
       
        android:text="Makes 1 serving"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="1.0" />
      
       <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
       
        android:text="1 white sugar cube"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="1.0" />
       
        <TextView
        android:id="@+id/textView6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
       
        android:text="2 dashes bitters (about 1/4 tsp)"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_weight="1.0"/>
        
         <TextView
        android:id="@+id/textView7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
       
        android:text="1 tsp fresh pomegranate arils"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_weight="1.0"/>
         
          <TextView
        android:id="@+id/textView8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
       
        android:text="4 ounces chilled Champagne"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="1.0" />
          
            <TextView
        android:id="@+id/textView9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
       
        android:text="DIRECTIONS"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="1.0" />
            
              <TextView
        android:id="@+id/textView10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
       
        android:text="1.Place a sugar cube into a champagne flute. Add bitters and let soak in."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="1.0" />
              
                <TextView
        android:id="@+id/textView11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
       
        android:text="2.Add pomegranate arils."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="1.0" />
                
                  <TextView
        android:id="@+id/textView12"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
       
        android:text="3.Open and slowly add the Champagne on top. Serve immediately."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="1.0" />
   
       </RelativeLayout>
          
</ScrollView>
